                        <input type="number" name="reg_number" id="">
            
                        <label for="Name">Name:</label>
                        <input type="text" name="name" id="">
            
                        <label for="Password">Password:</label>
                        <input type="text" name="password" id="">
            
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="">
            
                        <label for="year">Batch Number:</label>
                        <input type="number" name="batch" id="">
            
                        <br>
                        <br>
                        <input type="submit" value="Add User">
                  </form>

                  <form action="/admin/delete/users/" method="post" id="admin-add-new-users-onebyone-form" class="form-add-new-user-upper" style="height: auto;">
