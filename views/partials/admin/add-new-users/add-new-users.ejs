                        <label for="admin_id">Admin ID:</label>
                        <input type="number" name="admin_id" id="">
            
                        <label for="Name">Name:</label>
                        <input type="text" name="name" id="">
            
                        <label for="Password">Password:</label>
                        <input type="text" name="password" id="">
            
                        <label for="email">Level:</label>
                        <input type="number" name="level" id="">
                        <br>
                        <input type="submit" value="Add new admin" style="margin-top: 10px;">
                  </form>
            </div>
      </div>

      <div id="add-new-user-mid-body">
            <table class="table">
                  <h4>CURRENT ADMINS IN THE SYSTEM</h4>
                  <thead class="thead-dark">
                        <tr>
                              <th scope="col">Admin ID</th>
                              <th scope="col">Name</th>
                              <th scope="col">Password</th>
                              <th scope="col">Level</th>
                                          
                        </tr>
                  </thead>
                  <tbody>
                        <% for(let i=0;i<admins.length;i++){ %>
                              <tr>
                                    <td><%= admins[i].ADMIN_ID %></td>
                                    <td><%= admins[i].NAME %></td>
                                    <td><%= admins[i].PASSWORD %></td>
                                    <td><%= admins[i].LEVEL %></td>
                              </tr>
                        <% } %>
                        
                  </tbody>
                  
            </table>

      </div>
      
      <div id="add-new-user-lower-body">
            <table class="table">
                  <h4>CURRENT USERS IN THE SYSTEM</h4>
                  <thead class="thead-dark">
                        <tr>
                              <th scope="col">Index Number</th>
                              <th scope="col">Name</th>
                              <th scope="col">Password</th>
                              <th scope="col">Email</th>
                              <th scope="col">Batch number</th>
                                          
                        </tr>
                  </thead>
                  <tbody>
                        <% for(let i=0;i<users.length;i++){ %>
                              <tr>
                                    <td><%= users[i].REG_NUMBER %></td>
                                    <td><%= users[i].NAME %></td>
                                    <td><%= users[i].PASSWORD %></td>
                                    <td><%= users[i].EMAIL %></td>
                                    <td><%= users[i].BATCH_NUMBER %></td>
                              </tr>
                        <% } %>
                        
                  </tbody>
                  
            </table>

      </div>
