      <div id="add-new-user-upper-body">
            <div style="width:22%;height: 100%;display:flex;flex-direction: column; justify-content: space-between;">
                  <form action="/admin/enter/users/onebyone" method="post" id="admin-add-new-users-onebyone-form" class="form-add-new-user-upper">
